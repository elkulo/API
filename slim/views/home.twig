{% extends 'templates/layout.twig' %}

{% block ContentStyleBlock %}
<style>
.api-key {
  position: relative;
  overflow-x: scroll;
  max-width: 310px;
  height: 2em;
  margin: auto;
  background: #f1f1f1;
  color: #2f6f9f;
  border: solid 1px #ddd;
  border-radius: 5px;
}

.api-key span {
  box-sizing: border-box;
  position: absolute;
  left: 0;
  top: 0;
  display: block;
  font-size: 1rem;
  font-weight: 700;
  white-space: nowrap;
  line-height: 2em;
  width: 100%;
  padding: 0 0.75em;
}

.site {
  position: relative;
  display: flex;
  justify-content: center;
  align-items: center;
  flex-direction: column;
  height: 100%;
  background: linear-gradient(230deg, #a24bcf, #4b79cf, #4bc5cf);
  background-size: 300% 300%;
  animation: AnimationGradient 30s ease infinite;
}

.site-footer {
  position: absolute;
  left: 0;
  bottom: 1rem;
  width: 100%;
  text-align: center;
}

.heroe {
  box-sizing: border-box;
  max-width: 420px;
  padding: 0 1rem 5rem;
}
.heroe h1 {
  font-size: 2.5rem;
  font-weight: 500;
  text-align: center;
  font-family: "Noto Serif JP";
  letter-spacing: -0.02em;
  color: #fff;
  margin: 0;
}

.heroe__description {
  font-size: 1.325rem;
  font-weight: 300;
  text-align: center;
  color: #f1f1f1;
  margin: 1rem 0;
}

.heroe h2 {
  font-size: 1.25rem;
  font-weight: 500;
  text-align: center;
  font-family: "Noto Serif JP";
  letter-spacing: -0.02em;
  color: #fff;
  margin: 1rem 0;
}

.heroe ul {
  display: flex;
  justify-content: center;
  list-style: none;
  padding: 1em 1em 0 0;
}
.heroe ul > li {
  margin: 0 1rem;
}
.heroe ul > li::before {
  display: inline-block;
  content: 'â–·';
  color: #fff;
  margin: 0 0.5em 0.325em 0;
  font-size: 0.75em;
  vertical-align: middle;
}

.copyright {
  color: #fff;
  font-family: "Noto Serif JP";
  font-weight: 500;
}
</style>
{% endblock %}

{% block ContentBodyBlock %}

<!-- HEADER -->
<div class="site">

  <main class="heroe">

    <h1>API Server</h1>

    <p class="heroe__description">The RESTful API with slim framework.</p>

    <h2>One-Day Key</h2>

    <div class="api-key"><span>{{api_key}}</span></div>

    <ul>
      <li><a href="{{home_url}}/author?key={{api_key}}">Author API</a></li>
      <li><a href="{{home_url}}/product?key={{api_key}}">Product API</a></li>
    </ul>

  </main>
  <footer class="site-footer">

    <div class="copyright">&copy; {{title}}</div>

  </footer>

</div>

{% endblock %}